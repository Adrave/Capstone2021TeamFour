<% provide(:title, "All Events") %>

<div class="friend-list">
  <h2><%= link_to "->  Create Event", create_event_path %></h2>
</div>


<div class="events-container">
  <div class="container">
    <div class="jumbotron">
      <h1>Events</h1>
      <h2> Here is the list of events!</h2>
    </div>
    <div>
      <%@event.each do |event| %>
        <div class="jumbotron">
          <h3>
            <%= event.title %> 
          </h3>
<h6><span>Date: <%= event.scheduled_time%></span></h6>
    <span>Friends Invited: <% user_array = @users[event]%>
                            <%= user_array.to_sentence%>
                                  </span>
          <%= button_to "Attend", {:controller => "events", :action => "event_screen", :event_id => event.id}, {:style => "width: 20%;"} %> 
        </div>
      <%end%>
    </div>
  </div>
</div>