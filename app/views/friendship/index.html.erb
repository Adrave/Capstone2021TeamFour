<% provide(:title, "Friendship") %>

<div class="friend-list" style= "height: 50%;">
<h3><b> Friend's List </b> <h3>
 <ol>
  <% @friends.each do |friend| %>
 
          <li><%= link_to friend.username, friend_profile_path( user_id:friend.id), method: :post%></li>

  <% end %>
  </ol>
</div>

<div class="friend-list" style= "height: 50%;">
<h3><b> Friend Requests </b> <h3>
 <ol>
  <% @friend_requests.each do |friend_request| %>
   <li> <%= friend_request.username %>
    <%= friend_request.code %>
    <%= button_to "Accept", {:controller => "friendship", :action => "accept_friend", :user_id => friend_request.id} ,:method=>:put %> 
    <%= button_to "Decline", {:controller => "friendship", :action => "decline_friend", :user_id => friend_request.id} ,:method=>:delete %> </li>
  <% end %>
   </ol>
  </div> 

<div class="friend-list">
<h3> <b> Pending Requests </b> <h3>
<ol>
 <% @pending_requests.each do |pending_request| %>
    <li><%= pending_request.username %>
    <%= pending_request.code %> </li>
  <% end %>

  </ol>
</div>


<div class="form-box">
<h2>Search Friends!</h2>
<%= form_tag(result_path, :method => "get") do %>  
  <div class="input-group">  
    <%= search_field_tag :username, params[:username], placeholder: "Username", class: "form-control" %> 
    <%= search_field_tag :code, params[:code], placeholder: "Code", class: "form-control" %> 
    
    <div class="input-group-btn">  
      <%= button_tag "", :class => 'btn btn-info glyphicon glyphicon-search',:name => nil%>  
    </div>  
  </div>  
<% end %>
</div>