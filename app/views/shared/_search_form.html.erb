<div class="row">
  <%= form_with(url: search_path, method: :post, local: true) do |f| %>
    <%= f.label 'Search for reviews: ' %>
    <%= f.text_field :search_terms, 
                      placeholder: "title:logan medium:movie genre:action-adventure"%>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>
</div>