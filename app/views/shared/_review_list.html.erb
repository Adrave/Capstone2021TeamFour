<div>
  <%@reviews.each do |review| %>
    <div class="jumbotron">
      <div class="row">
        <div class="col-auto">
          <% if review.cover.attached? %>
          <% end %>
        </div>
        <div class="col"><p><b>
          <%= link_to review.user.username, friend_profile_path( user_id:review.user.id), method: :post%>
          <% if review.recommended %>
            <span style="color:green;"> recommends </span>
            <% else %>
              <span style="color:red;"> doesn't recommend </span>
            <% end %>
          <%= review.media %>
          <% if review.tags.length > 0 %>
            <div class="row">
              <% review.tags.each do |tag| %>
                <div class="d-inline-flex flex-row">
                  <div class="p-2 bd-highlight"><%= tag.category %> </div>
                  <div class="p-2 bd-highlight"><%= tag.name %> </div>
                </div>
              <% end %>
            </div>
          <% end %>
          <p>
            <%= review.content %>
          </p>
          <span style = "background-color:white;"> <%= review.post_date.to_date %> </span>
        </div>
      </div>
    </div>
  <%end%>
</div>