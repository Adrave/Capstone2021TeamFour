<header>
  <script>
  function openNav() {
    document.getElementById("left-sidebar").style.width = "250px";
  }

  /* Set the width of the side navigation to 0 */
  function closeNav() {
    document.getElementById("left-sidebar").style.width = "0";
  }
  </script>
  <% if logged_in? %>
  
  <button class="btn btn-primary" id="menu-toggle">Toggle Menu</button>
    <div id="left-sidebar" class="sidenav closebtn" onmouseleave="closeNav()">
      <%# <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a> %>
      <%= link_to "Home", home_path  %>
      <%= link_to "Friendship", friendship_path  %>
      <%= link_to "Events", events_path %>
      <%= link_to "Profile", profile_path  %>
      <%= link_to "Log-out", logout_path, method: :delete %>
    </div>



    <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
      <button class="btn btn-default" id="menu-toggle" onmouseover="openNav()"> Menu    </button>
      <div id="left-sidebar" class="sidenav closebtn" onmouseleave="closeNav()">
        <%= link_to "Home", home_path  %>
        <%= link_to "Friendship", friendship_path  %>
        <%= link_to "Events", events_path %>
        <%= link_to "Profile", profile_path  %>
        <%= link_to "Log-out", logout_path, method: :delete %>
      </div>
      <div class="container">
        <%= link_to "#{current_user.username}'s We-View", root_path, class:"navbar-brand mx-auto"%>
      </div>
      <div class = "dropdown">
        
           <a class="dropdown-toggle nav-link" type="button" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
              <i class="fa fa bell"></i>
            </a>
            <div class= "dropdown-menu" aria-labelledby= "navbarDropdown">
              <a class = "dropdown-item" href="#">Action</a>
            </div>     
      </div>
    </nav>
  <%else%>


  <nav class="navbar navbar-expand-lg navbar-custom fixed-top">
    <div class="container">
      <%= link_to "We-View", root_path, class:"navbar-brand"%>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse d-flex justify-content-end" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Sign-up",  signup_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Log-in",  login_path, class: "nav-link"  %>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <%end%>
</header>
